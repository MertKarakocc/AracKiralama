@model MvcKutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "Kiraiade";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KiraGuncelle", "Kira", FormMethod.Post))
{
    <div style=" margin-bottom:15px"></div>
    <div class="form-group">
        <label>Hareket ID</label>
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        <label>Plaka No</label>
        @Html.TextBoxFor(k => k.TBLARACLAR.ID, new { @class = "form-control" })
        <br />
        <label>Üye</label>
        @Html.TextBoxFor(k => k.TBLUYELER.AD, new { @class = "form-control" })
        <br />
        <label>Personel</label>
        @Html.TextBoxFor(k => k.TBLPERSONEL.PERSONEL, new { @class = "form-control" })
        <br />
        <label>Alış tarihi</label>
        @Html.TextBoxFor(k => k.ALISTARIH, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>Normal İade tarihi</label>
        @Html.TextBoxFor(k => k.IADETARIH, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>Üyenin Getirdiği Tarih</label>
        <input type="text" class="form-control" name="UYEGETIRTARIH" value="@DateTime.Now.ToShortDateString()" />
        <br />
        <label>Kiradaki Gün Sayısı</label>
        <input type="text"class="form-control" id="Gecinput" value="@ViewBag.dgr" />
     
    </div>
    <div>
        <button class="btn btn-group" style="background-color:#64d8ca; color:white">Kirayı Sonlandır</button>
    </div>
}

